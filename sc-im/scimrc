# command timeout
set command_timeout = 3000

set autocalc

set half_page_scroll = 1
set input_bar_bottom = 1

set truncate = 1

set debug = 1

# maps
nnoremap "Uc" ":unfreezecol<cr>"
nnoremap "Ur" ":unfreezerow<cr>"
vnoremap "U"  ":unfreezecol<cr>:unfreezerow<cr>"


# Dracula theme
REDEFINE_COLOR "WHITE" 248 248 242
